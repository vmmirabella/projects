<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trackButton"
            android:layout_marginTop="2dp"
            android:layout_marginRight="30dp"
            android:id="@+id/track"
            android:layout_gravity="right"
            android:textSize="12sp"
            android:focusable="false"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/Detailed_EventNameHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:text="@string/eventHeader"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_EventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="New Text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_LongDescHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/LongDescHeader"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_LongDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="New Text"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/Detailed_OrgNameHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="@string/OrgNameHeader"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/Detailed_OrgName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="New Text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_CategoryHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="@string/CategoryHeader"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="New Text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_AddressHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="@string/AddressHeader"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="New Text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_BeginShowHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="@string/BeginShowHeader"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_BeginShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="New Text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_TimeBeginHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="@string/TimeBeginHeader"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_TimeBegin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="New Text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_PerformanceHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="@string/PerformanceHeader"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_Performance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="New Text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_LocationHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="@string/LocationHeader"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="New Text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_IntersectionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="@string/IntersectionHeader"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_Intersection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="New Text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_TTCHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="@string/TTCHeader"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_TTC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="New Text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_AddressLinkHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="@string/AddressLinkHeader"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_AddressLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="New Text"
            android:textSize="16sp"
            android:autoLink="web" />


        <TextView
            android:id="@+id/Detailed_OrgContactHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:text="@string/OrgContactHeader"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_OrgContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="New Text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_EventLinkHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/EventLinkHeader"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Detailed_EventLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="New Text"
            android:textSize="16sp"
            android:autoLink="web" />



    </LinearLayout>


</ScrollView>
