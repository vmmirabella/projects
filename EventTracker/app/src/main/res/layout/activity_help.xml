<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="vm.eventtracker.Menu_Items.Help">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/FAQTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/FAQ_HelpTitle" />


        <TextView
            android:id="@+id/Help_Q1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FAQTitle"
            android:layout_marginTop="15dp"
            android:text="@string/Help_Q1" />

        <TextView
            android:id="@+id/Help_A1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Help_Q1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="@string/Help_A1" />

        <TextView
            android:id="@+id/Help_Q2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Help_A1"
            android:layout_marginTop="15dp"
            android:text="@string/Help_Q2" />

        <TextView
            android:id="@+id/Help_A2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Help_A1"
            android:layout_alignStart="@+id/Help_A1"
            android:layout_below="@+id/Help_Q2"
            android:layout_marginTop="10dp"
            android:text="@string/Help_A2" />

        <TextView
            android:id="@+id/Help_Q3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Help_A2"
            android:layout_marginTop="15dp"
            android:text="@string/Help_Q3" />

        <TextView
            android:id="@+id/Help_A3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Help_A2"
            android:layout_alignStart="@+id/Help_A2"
            android:layout_below="@+id/Help_Q3"
            android:layout_marginTop="10dp"
            android:text="@string/Help_A3" />

        <TextView
            android:id="@+id/Help_Q4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Help_A3"
            android:layout_marginTop="15dp"
            android:text="@string/Help_Q4" />

        <TextView
            android:id="@+id/Help_A4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Help_A3"
            android:layout_alignStart="@+id/Help_A3"
            android:layout_below="@+id/Help_Q4"
            android:layout_marginTop="10dp"
            android:text="@string/Help_A4" />

        <TextView
            android:id="@+id/Help_Q5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Help_A4"
            android:layout_marginTop="15dp"
            android:text="@string/Help_Q5" />

        <TextView
            android:id="@+id/Help_A5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Help_A3"
            android:layout_alignStart="@+id/Help_A3"
            android:layout_below="@+id/Help_Q5"
            android:layout_marginTop="10dp"
            android:text="@string/Help_A5" />

        <TextView
            android:id="@+id/Help_Q6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Help_A5"
            android:layout_marginTop="15dp"
            android:text="@string/Help_Q6" />

        <TextView
            android:id="@+id/Help_A6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Help_A3"
            android:layout_alignStart="@+id/Help_A3"
            android:layout_below="@+id/Help_Q6"
            android:layout_marginTop="10dp"
            android:text="@string/Help_A6" />

    </RelativeLayout>

</ScrollView>
