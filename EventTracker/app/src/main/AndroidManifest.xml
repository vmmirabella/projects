<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vm.eventtracker" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ThemeDark" >
        <service
            android:name=".Helpers.Service"
            android:exported="false" />

        <activity
            android:name=".MyEvents"
            android:label="@string/title_activity_my_events" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Detailed_View"
            android:label="@string/title_activity_detailed_view" >
        </activity>
        <activity
            android:name=".Events_and_Festivals"
            android:label="@string/title_activity_Events_and_Festivals" >
        </activity>
        <activity
            android:name=".Add_Edit_EventForm"
            android:label="@string/title_activity_add_event_form" >
        </activity>
        <activity
            android:name=".Detailed_CreatedView"
            android:label="@string/title_activity_detailed_created_view" >
        </activity>
        <activity
            android:name=".Menu_Items.Help"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name=".Menu_Items.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
